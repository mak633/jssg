{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@ui/config/tsconfig.base.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["../../packages/shared/src/*"],
      "@locales/*": ["./public/locales/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "public/locales/**/*.json"],
  "exclude": ["node_modules"]
}
